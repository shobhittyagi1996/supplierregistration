<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    templateShareable="false"
    id="YourFileTypeSelectionFragment"
    class="sapUiTinyMarginTop"
>
    <Dialog
        id="i1"
        title="Add Document by Upload"
        contentWidth="34rem"
        contentHeight="18rem"
        class="sapUiSmallMargin"
    >
        <content>
            <Toolbar
                id="i2"
                class="sapUiTinyMargin"
                style="Clear"
            >
                <Title
                    id="tit1"
                    text="Documents"
                />
                <ToolbarSpacer id="ts1" />
                <Button
                    id="_IDGenButton1895n"
                    text="Browse"
                    press=".uploadFilesHandler"
                />
            </Toolbar>
            <Table
                id="tab1"
                backgroundDesign="Solid"
                width="auto"
                fixedLayout="false"
                class="sapUiTinyMargin sapUiTableBorderVisible"
                items="{path: '/selectedItems', templateShareable:false}"
            >
                <columns>
                    <Column id="col3">
                        <Text
                            id="tit3"
                            text="Name"
                        />
                    </Column>
                    <Column id="col2">
                        <Label
                            id="l1"
                            text="Type"
                            required="true"
                        />
                    </Column>
                    <Column id="col1" />
                </columns>
                <items>
                    <ColumnListItem id="cl1">
                        <cells>
                            <Text
                                id="tit4"
                                text="{fileName}"
                            />
                            <ComboBox
                                id="cb1"
                                items="{path: '/types', templateShareable:false}"
                                selectedKey="{fileCategorySelected}"
                                selectionChange=".onDocumentTypeChange"
                                valueState="{=${fileCategorySelected} ? 'None' : 'Error'}"
                                valueStateText="Select a valid document type"
                            >
                                <core:ListItem
                                    id="li1"
                                    key="{categoryId}"
                                    text="{categoryText}"
                                />
                            </ComboBox>
                            <Button
                                id="b1"
                                type="Transparent"
                                icon="sap-icon://decline"
                                press=".handleRemove"
                            >
                                <customData>
                                    <core:CustomData
                                        key="item"
                                        value="{itemInstance}"
                                    />
                                    <core:CustomData
                                        key="reject"
                                        value="{fnReject}"
                                    />
                                </customData>
                            </Button>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
            <Button
                id="y7"
                text="Add"
                type="Emphasized"
                enabled="{parts: ['/selectedItems'], formatter: '.isAddButtonEnabled'}"
                press=".handleConfirmation"
            />
        </beginButton>
        <endButton>
            <Button
                id="y6"
                text="Cancel"
                press=".closeFileUplaodFragment"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
